		<tr>보낸 날짜</tr>
		<tr>from 트레이너(ID)</tr>
		
		
		<%
		if(userWhispList.size() > 0){
			for(int i = 0; i < userWhispList.size(); i++) {
		%>		
			<tr><%=userWhispList.get(i).getMemId() %></tr>	
			<tr><%=userWhispList.get(i).getWhispContent() %></tr>	
			<tr><%=userWhispList.get(i).getWhispDate() %></tr>	
			<tr><%=userWhispList.get(i).getPtNum() %></tr>	
		<%	
			}
		}else {
		%>
			<tr>
				<td colspan="7">게시글이 없습니다.</td>
			</tr>
		<%
			}
		%>
	<tr align="center">
		 <td colspan="7"><a href="<%=request.getContextPath() %>/HW/board/insert.do">[글등록]</a>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="<%=request.getContextPath() %>/HW/main/main.do">[메인화면]</a></td> 
	</tr>
	</table>
	<%
		if(msg.equals("성공")){ //성공메시지가 전달되면...
			
	%>		
			<script type="text/javascript">
				alert('정상적으로 처리되었습니다.');
			</script>
	<%
		}
